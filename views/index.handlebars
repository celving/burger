<div class="container-fluid px-0">
    <div class="row">
        <h1 class="bg-danger text-white text-center py-2">Burger Time</h1>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-4">
            <img src="../public/assets/img/burger.jpg">
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <h2 class="text-center">Available Burgers</h2>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devoured=false}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-md-4">
            <h2 class="text-center">Request a Burger</h2>
            <form class="create-form">

                <div class="form-group">
                    <label for="burger-name">Burger Type:</label>
                    <input type="text" id="burger-name" name="burger-name">
                </div>

                <button type="submit">Request Burger</button>
            </form>
        </div>
        <div class="col-md-4">
            <h2 class="text-center">Burger History</h2>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burger-block devoured=true}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>